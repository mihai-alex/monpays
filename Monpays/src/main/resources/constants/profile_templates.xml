<?xml version="1.0" encoding="UTF-8"?>
<profile_templates>

    <!-- ADMINISTRATOR -->

    <profile_template>
        <type>ADMINISTRATOR</type>
        <rights>
            <group>
                <name>Profile</name>
                <operation_types>
                    <operation_type>LIST</operation_type>
                    <operation_type>CREATE</operation_type>
                    <operation_type>REPAIR</operation_type>
                    <operation_type>MODIFY</operation_type>
                    <operation_type>REMOVE</operation_type>
                    <operation_type>APPROVE</operation_type>
                    <operation_type>REJECT</operation_type>
                </operation_types>
            </group>
            <group>
                <name>User</name>
                <operation_types>
                    <operation_type>LIST</operation_type>
                    <operation_type>CREATE</operation_type>
                    <operation_type>REPAIR</operation_type>
                    <operation_type>MODIFY</operation_type>
                    <operation_type>REMOVE</operation_type>
                    <operation_type>APPROVE</operation_type>
                    <operation_type>REJECT</operation_type>
                    <operation_type>BLOCK</operation_type>
                    <operation_type>UNBLOCK</operation_type>
                </operation_types>
            </group>
            <group>
                <name>Account</name>
                <operation_types>
                    <operation_type>LIST</operation_type>
                    <operation_type>CREATE</operation_type>
                    <operation_type>REPAIR</operation_type>
                    <operation_type>MODIFY</operation_type>
                    <operation_type>CLOSE</operation_type>
                    <operation_type>REMOVE</operation_type>
                    <operation_type>APPROVE</operation_type>
                    <operation_type>REJECT</operation_type>
                    <operation_type>BLOCK</operation_type>
                    <operation_type>UNBLOCK</operation_type>
                    <operation_type>BLOCK_CREDIT</operation_type>
                    <operation_type>UNBLOCK_CREDIT</operation_type>
                    <operation_type>BLOCK_DEBIT</operation_type>
                    <operation_type>UNBLOCK_DEBIT</operation_type>
                </operation_types>
            </group>
            <group>
                <name>Balance</name>
                <operation_types>
                    <operation_type>LIST</operation_type>
                </operation_types>
            </group>
            <group>
                <name>Payment</name>
                <operation_types>
                    <operation_type>LIST</operation_type>
                    <operation_type>CREATE</operation_type>
                    <operation_type>REPAIR</operation_type>
                    <operation_type>APPROVE</operation_type>
                    <operation_type>REJECT</operation_type>
<!--                    verification if a transaction amount is above its account limit -->
                    <operation_type>VERIFY</operation_type>
                    <operation_type>AUTHORIZE</operation_type>
                    <operation_type>CLOSE</operation_type>
                </operation_types>
            </group>
        </rights>
    </profile_template>

